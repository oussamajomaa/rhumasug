{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}
    <div class="container col-10">
        {% if produits %}
            <div class="row d-flex justify-content-between p-1"  >
                {% for produit in produits %}

                    <div class="col-12 col-md-6 col-lg-3"  style="margin-bottom:10px" data-aos="zoom-in" >
                        <div class="card-body  btn btn-dark">
                            <div class="badge badge-info" >
                                <img style="width: 100%;" src="{{ asset(produit.photo) }}" alt="">
                            </div>
                            <div class="btn btn-dark m-1">{{ produit.designation | upper }}</div>
                            <div class="btn btn-success" >{{ produit.prix }}â‚¬</div>
                        </div>
                    </div>

                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info alert-dismissible text-center">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>{{ message }}</strong> .
            </div>
        {% endif %}
    </div>
{% endblock %} 
