{% extends 'base.html.twig' %}



{% block title %}Hello AccueilController!{% endblock %}

{% block body %}


<div class="container ">


{% if produits %}

    <table class="table  table-striped">
        <thead class="table-dark ">
            <tr>      
                <th class="border-dark" scope="col">d√©signation</th>
                <th class="border-dark" scope="col">prix</th>
                    
                <th class="border-dark" scope="col">photo</th>               
            </tr>
        </thead>

    {% for produit in produits %}
    <tr>
        <td >{{ produit.designation | upper }}</td>
        <td >{{ produit.prix }}</td>
        <td ><img style="width: 100px;" src="{{ asset(produit.photo) }}" alt=""></td>
    </tr>
    {% endfor %}
    </table>
    
{% else %}
    <p class="text-danger">{{ message }}</p>
{% endif %}
</div>
{% endblock %} 
